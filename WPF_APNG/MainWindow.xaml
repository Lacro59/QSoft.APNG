<Window x:Class="WPF_APNG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_APNG"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel >
            <Button x:Name="button_test" Click="Button_test_Click">Test</Button>
            <Image x:Name="img"/>
            <ScrollViewer Width="100" Height="100" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden">
                <Grid Width="2900">
                    <Image  Stretch="None"
                Source="heart.png"
                Height="100"
                Loaded="Image_Loaded"
                >
                        <Image.RenderTransform>
                            <TranslateTransform X="0"/>
                        </Image.RenderTransform>
                    </Image>
                </Grid>
            </ScrollViewer>
            <Border Height="148" Width="148">
                <Image Source="test.png" Width="3700" Height="148"/>
            </Border>
            
        </StackPanel>
        
       
    </Grid>
    
</Window>
